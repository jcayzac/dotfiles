[push]
	default = matching
[color]
	ui = true
[diff]
	renames = copies
	algorithm = histogram
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = false
[merge]
	#tool = vimdiff
	tool = diffmerge
[gc]
	auto = 1
[format]
	pretty = fuller
[instaweb]
	local = true
	httpd = webrick
	port = 54321
	browser = open
[log]
	date = iso
[alias]
	browser = instaweb
	push-for-review = push gerrit HEAD:refs/for/develop
	backlog = log --graph --pretty=format:'%C(white red bold) %h %Creset %C(cyan)%an%Creset %s %Cgreen(%cd)%Creset%C(yellow)%d%Creset' --abbrev-commit --no-merges
	tinylog = !git backlog -n10
	last = rev-list --max-count=1 HEAD
	remodule = submodule update --init --recursive --force
	reinit = !git clean -fdx && git submodule foreach --recursive git clean -fdx && git reset --hard && git submodule foreach --recursive git reset --hard && git remodule
	tarball = !git archive HEAD --format=tar | bzip2 > "$(git rev-parse --git-dir)/../snapshot-$(git last).tar.bz2"
	snapshot = !git stash save --include-untracked "snapshot: $(date -u +'%Y-%m-%d %H:%M:%S')" && git stash apply "stash@{0}"
[core]
	filemode = true
	pager = less -FXnSR
#[http]
#	sslVerify = false
[credential]
	helper = osxkeychain
