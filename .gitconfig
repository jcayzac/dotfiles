[push]
	default = current
[color]
	ui = auto
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = false
[merge]
	#tool = vimdiff
	tool = diffmerge
[gc]
	auto = 1
[format]
	pretty = fuller
[instaweb]
	local = true
	httpd = webrick
	port = 54321
	browser = open
[alias]
	browser = instaweb
	backlog = log --graph --pretty=format:'%C(white red bold) %h %Creset %C(cyan)%cn%Creset %s %Cgreen(%cr)%Creset%C(yellow)%d%Creset' --abbrev-commit
	shortlog = !git backlog -n10
	last = rev-list --max-count=1 HEAD
	init-modules-recursive = "!git submodule init; git submodule update; git submodule foreach 'git init-modules-recursive'"
	pull-modules-recursive = "!git submodule foreach \"git pull origin master; git submodule foreach 'git pull-modules-recursive'\""
	tarball = !git archive HEAD --format=tar | bzip2 > "$(git rev-parse --git-dir)/../snapshot-$(git last).tar.bz2"

